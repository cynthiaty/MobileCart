<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cynthiaty.mobilecart">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.MallActivity"
            android:label="@string/activity_title_mall"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.MeActivity"
            android:label="@string/activity_title_me"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.CartActivity"
            android:label="@string/activity_title_cart"
            android:screenOrientation="portrait"/>
    </application>

</manifest>